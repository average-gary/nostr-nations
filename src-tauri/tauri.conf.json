{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nostr Nations",
  "version": "0.1.0",
  "identifier": "com.nostr-nations.app",
  "build": {
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Nostr Nations",
        "width": 1280,
        "height": 720,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"],
    "category": "Game",
    "shortDescription": "A Civilization-style 4X strategy game using Nostr",
    "longDescription": "Nostr Nations is a decentralized 4X strategy game where players build civilizations, manage resources, and engage in diplomacy - all powered by the Nostr protocol for true ownership and interoperability.",
    "copyright": "Copyright (c) 2024 Nostr Nations Contributors",
    "publisher": "Nostr Nations",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "allowDowngrades": false,
      "wix": null,
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser",
        "languages": ["English"],
        "displayLanguageSelector": false
      }
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1"
        ]
      },
      "rpm": {
        "release": "1",
        "epoch": 0
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
